<div class="container mt-3">
  <h1 class='mb-3'> All your Tasks </h1>
  <ul class="list-group">
   <% @tasks.each do |task| %>
     <li class="list-group-item">
     <%= link_to task.title, task_path(task), class: 'text-decoration-none text-black' %>
     <%= link_to task_path(task),
     data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
     class: 'text-decoration-none' do %>
      <i class="fa-solid fa-delete-left fa-lg" style="color: #d41616;"></i>
      <%end%>
     <% end %>
     </li>

  </ul>
  <p class='mt-3'>
    <%= link_to '+', newtask_path, class: 'btn btn-success mt-2' %>
  </p>

</div>
